{
  "name": "fetchmd",
  "version": "0.1.0",
  "description": "Convert any webpage to clean, token-efficient markdown for AI agents",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "bin": {
    "fetchmd": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src/",
    "format": "biome check --write src/",
    "check": "pnpm lint && pnpm test && pnpm build",
    "prepublishOnly": "pnpm run check"
  },
  "keywords": [
    "markdown",
    "html-to-markdown",
    "cli",
    "readability",
    "ai",
    "web-scraping"
  ],
  "license": "MIT",
  "author": "",
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "commander": "^14.0.3",
    "jsdom": "^28.1.0",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "peerDependencies": {
    "puppeteer": ">=20.0.0"
  },
  "peerDependenciesMeta": {
    "puppeteer": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/jsdom": "^28.0.0",
    "@types/node": "^25.3.1",
    "@types/turndown": "^5.0.6",
    "puppeteer": "^24.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
